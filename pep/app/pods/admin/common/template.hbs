{{page-title (t "read.title" title=this.document.title)}}
<Page::Content>
    <div class="p-4 form-row">
        <div class="card col-sm-8">
            <div class="card-body">
                <FormValidator @changeset={{@options.changeset}} @submit={{this.login}} as |changeset validator|>
                    <div class="form-row">
                        <div class="col-sm-10 offset-sm-1 p-0">
                            <validator.input
                                @errors={{changeset.error.username.validation}}
                                class="input-validator-compact"
                            >
                                <FlInput
                                    @value={{changeset.global.cards.videoPreview.code}}
                                    @placeholder="Latest video embed code"
                                    maxlength="1028"
                                />
                            </validator.input>
                            <validator.input
                                @errors={{changeset.error.whatsNew.validation}}
                                class="input-validator-compact"
                            >
                                <FlInput
                                    @value={{changeset.global.cards.whatsNew.limit}}
                                    @placeholder="Whats new result count"
                                    maxlength="2"
                                />
                            </validator.input>
                            <div class="d-flex  justify-content-end align-items-center">
                                <div>
                                    <Button @type="link" @label={{t "common.cancel"}} @action={{@onClose}} />
                                    <ButtonSpinner
                                        @type="primary"
                                        @label={{t "common.save"}}
                                        @wide={{true}}
                                        @action={{validator.submit}}
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </FormValidator>
            </div>
        </div>
    </div>
</Page::Content>
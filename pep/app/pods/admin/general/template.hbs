{{page-title (t "admin.title")}}
<Page::Content>
    <FormValidator @changeset={{this.changeset}} @submit={{this.save}} as |changeset validator|>
        <div class="d-flex">
            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-center sticky-top bg-body p-3">
                    <h2 class="mb-0">
                        {{t "admin.common.title"}}
                    </h2>
                    <ButtonSpinner
                        @disabled={{this.saveDisabled}}
                        @type="primary"
                        @label={{t "common.save"}}
                        @wide={{true}}
                        @action={{validator.submit}}
                    />
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-row">
                            <div class="col-12">
                                <h4 class="border-bottom mb-3">
                                    {{t "admin.common.global.cards.videoPreview.title"}}
                                </h4>
                                <validator.input
                                    @errors={{changeset.error.configSettings.global.cards.videoPreview.code.validation}}
                                    @label={{true}}
                                >
                                    <FlInput
                                        @value={{changeset.configSettings.global.cards.videoPreview.code}}
                                        @placeholder={{t "admin.common.global.cards.videoPreview.code"}}
                                    >
                                        <textarea
                                            value={{changeset-get
                                                changeset
                                                "configSettings.global.cards.videoPreview.code"
                                            }}
                                            class="form-control"
                                            autocomplete="off"
                                            rows="5"
                                            {{on
                                                "input"
                                                (event-value
                                                    (changeset-set
                                                        changeset "configSettings.global.cards.videoPreview.code"
                                                    )
                                                )
                                            }}
                                        ></textarea>
                                    </FlInput>
                                </validator.input>
                                <validator.input
                                    @errors={{changeset.error.configSettings.global.cards.topicalVideoPreview.code.validation
                                    }}
                                    @label={{true}}
                                >
                                    <FlInput
                                        @value={{changeset.configSettings.global.cards.topicalVideoPreview.code}}
                                        @placeholder={{t "admin.common.global.cards.topicalVideoPreview.code"}}
                                    >
                                        <textarea
                                            value={{changeset-get
                                                changeset
                                                "configSettings.global.cards.topicalVideoPreview.code"
                                            }}
                                            class="form-control"
                                            autocomplete="off"
                                            rows="5"
                                            {{on
                                                "input"
                                                (event-value
                                                    (changeset-set
                                                        changeset "configSettings.global.cards.topicalVideoPreview.code"
                                                    )
                                                )
                                            }}
                                        ></textarea>
                                    </FlInput>
                                </validator.input>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-row">
                            <div class="col-12">
                                <h4 class="border-bottom mb-3">
                                    {{t "admin.common.global.cards.limitsTitle"}}
                                </h4>
                                <div class="form-row">
                                    <div class="col-3">
                                        <validator.input
                                            @errors={{changeset.error.configSettings.global.cards.whatsNew.limit.validation
                                            }}
                                        >
                                            <FlInput
                                                @value={{changeset.configSettings.global.cards.whatsNew.limit}}
                                                @placeholder={{t "admin.common.global.cards.whatsNew.limit"}}
                                            >
                                                <ChangesetInput
                                                    @changeset={{changeset}}
                                                    @path="configSettings.global.cards.whatsNew.limit"
                                                    class="form-control"
                                                    autocomplete="off"
                                                />
                                            </FlInput>
                                        </validator.input>
                                        <validator.input
                                            @errors={{changeset.error.configSettings.global.cards.mostCited.limit.validation
                                            }}
                                        >
                                            <FlInput
                                                @value={{changeset.configSettings.global.cards.mostCited.limit}}
                                                @placeholder={{t "admin.common.global.cards.mostCited.limit"}}
                                            >
                                                <ChangesetInput
                                                    @changeset={{changeset}}
                                                    @path="configSettings.global.cards.mostCited.limit"
                                                    class="form-control"
                                                    autocomplete="off"
                                                />
                                            </FlInput>
                                        </validator.input>
                                        <validator.input
                                            @errors={{changeset.error.configSettings.global.cards.mostViewed.limit.validation
                                            }}
                                        >
                                            <FlInput
                                                @value={{changeset.configSettings.global.cards.mostViewed.limit}}
                                                @placeholder={{t "admin.common.global.cards.mostViewed.limit"}}
                                            >
                                                <ChangesetInput
                                                    @changeset={{changeset}}
                                                    @path="configSettings.global.cards.mostViewed.limit"
                                                    class="form-control"
                                                    autocomplete="off"
                                                />
                                            </FlInput>
                                        </validator.input>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-row">
                            <div class="col-12">
                                <h4 class="border-bottom mb-3">
                                    {{t "admin.common.search.title"}}
                                </h4>
                                <div class="form-row">
                                    <div class="col-3">
                                        <validator.input
                                            @errors={{changeset.error.configSettings.search.hitsInContext.limit.validation
                                            }}
                                        >
                                            <FlInput
                                                @value={{changeset.configSettings.search.hitsInContext.limit}}
                                                @placeholder={{t "admin.common.search.hitsInContext.limit"}}
                                            >
                                                <ChangesetInput
                                                    @changeset={{changeset}}
                                                    @path="configSettings.search.hitsInContext.limit"
                                                    class="form-control"
                                                    autocomplete="off"
                                                />
                                            </FlInput>
                                        </validator.input>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-3">
                                        <validator.input
                                            @errors={{changeset.error.configSettings.search.limitFields.isShown.validation
                                            }}
                                        >
                                            <ChangesetCheckbox
                                                @changeset={{changeset}}
                                                @path="configSettings.search.limitFields.isShown"
                                                @label={{t "admin.common.search.limitFields.isShown"}}
                                            />
                                        </validator.input>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-row">
                            <div class="col-12">
                                <SortableGroup
                                    @swapAnimation={{true}}
                                    @mirrorOptions={{this.mirrorOptions}}
                                    class="row" as |Group|
                                >
                                    <div class="col-12">
                                        <div class="row">
                                            <h4 class="col-6 d-flex justify-content-center align-items-end">
                                                {{t "admin.common.global.cards.left"}}
                                            </h4>
                                            <h4 class="col-6 d-flex justify-content-center align-items-end">
                                                {{t "admin.common.global.cards.right"}}
                                            </h4>
                                        </div>
                                    </div>
                                    <div class="sortable container-list col-6">
                                        <Group.container
                                            @items={{changeset-get changeset "configSettings.global.cards.left"}}
                                            @itemReordered={{changeset-set
                                                changeset
                                                "configSettings.global.cards.left"
                                            }}
                                            @itemAdded={{changeset-set changeset "configSettings.global.cards.left"}}
                                            @itemRemoved={{changeset-set
                                                changeset
                                                "configSettings.global.cards.left"
                                            }} as |container|
                                        >
                                            {{#each container.items as |item index|}}
                                                <container.item @item={{item}}>
                                                    <div
                                                        class="d-flex justify-content-between align-items-center w-100"
                                                    >
                                                        {{item.widget}}
                                                        <CheckboxInput
                                                            @checked={{item.open}}
                                                            @onChange={{fn this.updateOpenState changeset index "left"}}
                                                            @label={{t "admin.common.global.cards.opened"}}
                                                        />
                                                    </div>
                                                </container.item>
                                            {{/each}}
                                        </Group.container>
                                    </div>
                                    <div class="sortable container-list col-6">
                                        <Group.container
                                            @items={{changeset-get changeset "configSettings.global.cards.right"}}
                                            @itemReordered={{changeset-set
                                                changeset
                                                "configSettings.global.cards.right"
                                            }}
                                            @itemAdded={{changeset-set changeset "configSettings.global.cards.right"}}
                                            @itemRemoved={{changeset-set
                                                changeset
                                                "configSettings.global.cards.right"
                                            }} as |container|
                                        >
                                            {{#each container.items as |item index|}}
                                                <container.item @item={{item}}>
                                                    <div
                                                        class="d-flex justify-content-between align-items-center w-100"
                                                    >
                                                        {{item.widget}}
                                                        <CheckboxInput
                                                            @checked={{item.open}}
                                                            @onChange={{fn
                                                                this.updateOpenState
                                                                changeset
                                                                index
                                                                "right"
                                                            }}
                                                            @label={{t "admin.common.global.cards.opened"}}
                                                        />
                                                    </div>
                                                </container.item>
                                            {{/each}}
                                        </Group.container>
                                    </div>
                                </SortableGroup>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-row">
                            <div class="col-12">
                                <SortableGroup
                                    @swapAnimation={{true}}
                                    @mirrorOptions={{this.mirrorOptions}}
                                    class="row" as |Group|
                                >
                                    <h4 class="col-12 d-flex justify-content-between align-items-center">
                                        {{t "admin.common.search.terms.defaults"}}
                                        <Button
                                            @type="primary"
                                            @blockLayout={{this.fastbootMedia.isMobile}}
                                            @icon="plus"
                                            @action={{fn this.addDefaultField}}
                                        />
                                    </h4>
                                    <div class="sortable container-list col-12">
                                        <Group.container
                                            @items={{this.fields}}
                                            @itemReordered={{this.updateFields}} as |container|
                                        >
                                            {{#each container.items as |item index|}}
                                                <container.item @item={{item}}>
                                                    <div
                                                        class="d-flex justify-content-between align-items-center w-100"
                                                    >
                                                        <select
                                                            class="custom-select col-2"
                                                            {{on "change" (fn this.updateDefaultField index)}}
                                                        >
                                                            {{#each this.searchTypeOptions as |searchType|}}
                                                                <option
                                                                    value={{searchType.id}}
                                                                    selected={{eq searchType.id item.field}}
                                                                >
                                                                    {{t searchType.label}}
                                                                </option>
                                                            {{/each}}
                                                        </select>

                                                        <Button
                                                            @type="secondary"
                                                            @blockLayout={{this.fastbootMedia.isMobile}}
                                                            @icon="times"
                                                            @action={{fn this.removeDefaultField index}}
                                                        />
                                                    </div>
                                                </container.item>
                                            {{/each}}
                                        </Group.container>
                                    </div>
                                </SortableGroup>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-row">
                            <div class="col-12">
                                <h4 class="d-flex justify-content-between align-items-center border-bottom mb-3 pb-1">
                                    {{t "admin.common.home.expertPicks.title"}}
                                    <Button
                                        @action={{this.openExpertPickModal}}
                                        @icon="plus"
                                        @iconSize="lg"
                                        class="p-1"
                                    />
                                </h4>
                                <Table
                                    @containerSelector=".page-content-inner"
                                    @columns={{this.columns}}
                                    @rows={{changeset.configSettings.home.expertPicks}}
                                    @fillMode="nth-column"
                                    @fillColumnIndex={{0}}
                                    @renderAllRows={{this.fastboot.isFastBoot}}
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </FormValidator>
</Page::Content>
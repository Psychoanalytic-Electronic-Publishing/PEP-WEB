<Page::Content>
    <div class="py-3 px-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-center align-items-center">
                    <div class="d-flex justify-content-center align-items-center">
                        <img src="{{this.journal.bannerURL}}" alt="{{t "browse.alt"}}" />
                    </div>
                </div>
                <div class="pep-document-content m-5">
                    <ContentWithPlaceholder @isLoading={{not this.model}}>
                        <div class="container-fluid">
                            <ol class="list-unstyled">
                                {{#each this.model as |result|}}
                                    {{#if result.issueTitle}}
                                        <strong>
                                            {{result.issueTitle}}
                                        </strong>
                                    {{/if}}
                                    {{#if result.newSectionName}}
                                        <strong>
                                            {{result.newSectionName}}
                                        </strong>
                                    {{/if}}
                                    <li class="mb-2">
                                        {{result.documentRef}}
                                    </li>
                                {{/each}}
                            </ol>
                        </div>
                    </ContentWithPlaceholder>
                </div>
            </div>
        </div>
    </div>
</Page::Content>
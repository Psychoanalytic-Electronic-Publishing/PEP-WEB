<Page::Content>
    <div class="pb-3 px-4">
        <div class="sticky-top bg-body py-2">
            <div class="d-flex justify-content-between align-items-center">
                <p class="small text-muted {{if this.model.accessLimited " mb-2" " mb-0"}}">
                    {{this.model.documentRef}}
                </p>
                <div class="d-flex align-items-center">
                    {{#unless this.model.accessLimited}}
                        <div class="flex-shrink-0">
                            <Document::Actions::Download @id={{this.model.id}} />
                            <Document::Actions::Print @id={{this.model.id}} />
                        </div>
                    {{/unless}}
                </div>
            </div>
        </div>
        <Document::Read @model={{this.model}} @page={{this.page}} @onAuthenticated={{this.onAuthenticated}} />
    </div>
</Page::Content>
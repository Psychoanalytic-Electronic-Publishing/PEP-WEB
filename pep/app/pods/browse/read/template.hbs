<Page::Content>
    <div class="pb-3 px-4">
        <div class="sticky-top bg-body py-2">
            <div class="d-flex justify-content-between align-items-center">
                <p class="small text-muted {{if this.model.accessLimited " mb-2" " mb-0"}}">
                    {{this.model.documentRef}}
                </p>
                <div class="d-flex align-items-center">
                    {{#unless this.model.accessLimited}}
                        <div class="flex-shrink-0">
                            <Document::Actions::Download @id={{this.model.id}} />
                            <Document::Actions::Print @id={{this.model.id}} />
                        </div>
                    {{/unless}}
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <Alert @isShown={{this.model.accessLimited}} @type="warning">
                    {{#if this.model.noAccessMessage}}
                        <p class={{if this.session.isAuthenticated "mb-0"}}>
                            {{html-safe this.model.noAccessMessage}}
                        </p>
                    {{/if}}
                    {{#unless this.session.isAuthenticated}}
                        <p class="mb-0">
                            {{t "read.document.loginToRead"}}
                            <a href="" {{on "click" this.login}}>
                                {{t "read.document.login"}}
                            </a>
                            .
                        </p>
                    {{/unless}}
                </Alert>
                <div class="pep-document-content" id="read-document">
                    <ContentWithPlaceholder @placeholderInFastboot={{true}}>
                        <Document::Text
                            @document={{this.model}}
                            @onGlossaryItemClick={{this.viewGlossaryTerm}}
                            @page={{this.page}}
                            @readQueryParams={{this.readQueryParams}}
                            @viewSearch={{this.viewSearch}}
                            @searchHitNumber={{this.searchHitNumber}}
                        />
                    </ContentWithPlaceholder>
                </div>
            </div>
        </div>
    </div>
</Page::Content>
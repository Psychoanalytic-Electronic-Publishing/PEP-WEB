<ModalDialog @onClose={{@onClose}} @size="lg" @clickOutsideToClose={{false}} as |Modal|>
    <Modal.header @title={{t "admin.content.global.tour.step.title"}} />
    <FormValidator @changeset={{@options.changeset}} @submit={{this.update}} as |changeset validator|>
        <Modal.body>
            <validator.input @errors={{changeset.error.title.validation}}>
                <FlInput @value={{changeset.title}} @placeholder={{t "admin.content.global.tour.step.inputTitle"}}>
                    <ChangesetInput @changeset={{changeset}} @path="title" class="form-control" autocomplete="off" />
                </FlInput>
            </validator.input>
            <validator.input
                @errors={{changeset.error.text.validation}}
                @label={{true}}
                @hasFocusedOut={{true}}
                @fieldLabel={{t "admin.content.global.tour.step.inputText"}}
            >
                <Admin::Editor @changeset={{changeset}} @path="text" />
            </validator.input>
        </Modal.body>
        <Modal.footer>
            <Button @type="link" @label={{t "common.cancel"}} @action={{@onClose}} />
            <ButtonSpinner @type="primary" @label={{t "common.update"}} @wide={{true}} @action={{validator.submit}} />
        </Modal.footer>
    </FormValidator>
</ModalDialog>
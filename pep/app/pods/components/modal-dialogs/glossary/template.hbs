<ModalDialog @onClose={{@onClose}} @size="lg" as |Modal|>
    <Modal.header @title={{t "glossary.title"}} />
    <Modal.body>
        {{#each this.glossaryItem.results as |glossary|}}
            <Document::Text @document={{glossary}} @onGlossaryItemClick={{this.viewGlossaryTerm}} />
        {{/each}}
    </Modal.body>
    <Modal.footer>
        {{! Commenting this out for now }}
        {{!-- <Button @type="link" @label={{t "glossary.searchForTerm"}} @action={{this.searchForTerm}} /> --}}
        <Button @type="link" @label={{t "common.close"}} @action={{@onClose}} />
    </Modal.footer>
</ModalDialog>
<div
    class="sidebar sidebar-{{@side}}
        {{~unless this.isOpen " sidebar-collapsed"}}
        {{~if this.otherSidebarIsOpen " other-sidebar-is-open"}}
        {{~if this.isResizing " is-drag-resizing"}}"
    style={{this.sidebarStyles}}
    ...attributes
>
    <div
        class="sidebar-inner"
        style={{this.sidebarInnerStyles}}
        {{did-insert this.onElementInsert}}
        {{did-window-resize this.onWindowResize}}
    >
        {{#if this.canResize}}
            <DragBar
                @orientation="vertical"
                @reversed={{this.isRight}}
                @minClientX={{this.minWidth}}
                @maxClientX={{this.maxWidth}}
                @onDragStart={{this.onDragStart}}
                @onDragMove={{this.onDragMove}}
                @onDragEnd={{this.onDragEnd}}
            />
        {{/if}}
        {{yield}}
    </div>
    <button
        type="button"
        class="sidebar-toggle-handle"
        name={{t "buttons.sidebarToggle.name"}}
        aria-label={{t "buttons.sidebarToggle.ariaLabel"}}
        {{on "click" this.toggle}}
    >
        <FaIcon @icon={{if
            this.isOpen
            (if this.isLeft "chevron-left" "chevron-right")
            (if this.isLeft "chevron-right" "chevron-left")
        }}
        />
    </button>
</div>

<CollapsiblePanel
    @scrollableNamespace="sidebar-right"
    @isOpen={{this.isOpen}}
    @toggle={{fn @toggleIsOpen this.widget}}
    {{did-insert this.onElementInsert}}
    {{did-update this.loadSimilarFromDocument @data}}
    class="mb-2"
as |Panel|>
    <Panel.header @title={{t "relatedInfo.widgets.moreLikeThese.title"}} />
    <Panel.body>
        <h5>{{t "relatedInfo.widgets.moreLikeThese.confidence" number=(round this.results.similarMaxScore)}}</h5>
        <ul class="list-unstyled">
            {{#each this.results.similarDocuments as |result|}}
                <li class="mb-2">
                    <div>
                        <LinkTo @route="read.document" @model={{result.id}}>
                            {{html-safe result.title}}
                        </LinkTo>
                        <div class="text-muted small">
                            {{html-safe result.sourceTitle}}
                        </div>
                    </div>
                </li>
            {{else}}
                <li class="py-3 mb-0 text-center text-muted">
                    {{t "common.noResults"}}
                </li>
            {{/each}}
        </ul>
    </Panel.body>
</CollapsiblePanel>

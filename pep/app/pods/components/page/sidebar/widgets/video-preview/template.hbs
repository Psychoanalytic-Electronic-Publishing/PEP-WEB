<CollapsiblePanel
    @scrollableNamespace="sidebar-right"
    @isOpen={{this.isOpen}}
    @toggle={{fn @toggleIsOpen this.widget}}
    class="mb-2" as |Panel|
>
    <Panel.header
        @title={{t "relatedInfo.widgets.videoPreview.title"}}
        @tooltip={{t "relatedInfo.widgets.videoPreview.help"}}
    />
    <Panel.body class="p-1">
        <div
            class="embed-responsive embed-responsive-{{this.configuration.base.global.cards.videoPreview.aspectRatio}}"
        >
            {{html-safe this.configuration.base.global.cards.videoPreview.code}}
        </div>
    </Panel.body>
</CollapsiblePanel>
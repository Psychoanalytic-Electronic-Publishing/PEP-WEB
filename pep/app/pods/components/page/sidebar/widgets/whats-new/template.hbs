<CollapsiblePanel
    @scrollableNamespace="sidebar-right"
    @isOpen={{this.isOpen}}
    @toggle={{fn @toggleIsOpen this.widget}}
    class="mb-2 page-widget"
    {{did-insert this.onElementInsert}}
    ...attributes
as |Panel|>
    <Panel.header>
        {{t "relatedInfo.widgets.whatsNew.title"}}
        <span class="widget-icon" {{on "click" this.openModal}}>
            <FaIcon @icon="envelope" @prefix="fal"/>
        </span>
    </Panel.header>
    <Panel.body>
        <ContentWithPlaceholder
            @placeholderComponent="loading/widget"
            @isLoading={{this.isLoading}}
        >
            <ul class="list-unstyled">
                {{#each this.results as |result|}}
                    <li class="mb-2">
                        <div>
                            {{html-safe result.displayTitle}}
                        </div>
                        <div class="text-muted small">
                            {{html-safe
                                (t "relatedInfo.widgets.whatsNew.issue"
                                    issueNum=result.issue
                                    volNum=result.volume
                                    updatedDate=(moment-format result.updated "MMMM Do, YYYY")
                                )
                            }}
                        </div>
                    </li>
                {{else}}
                    <li class="py-3 mb-0 text-center text-muted">
                        {{t "common.noResults"}}
                    </li>
                {{/each}}
            </ul>
        </ContentWithPlaceholder>
    </Panel.body>
</CollapsiblePanel>

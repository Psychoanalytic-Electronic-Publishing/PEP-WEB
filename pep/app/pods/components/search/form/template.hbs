<div class="bg-white border-divider-b search-form" ...attributes>
    <div class="p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">
                Search for Documents
            </h5>
            <div>
                <DropdownMenu @horizontalPosition="right" as |DD|>
                    <DD.Trigger @htmlTag="button" class="btn btn-link">
                        <FaIcon @icon="bookmark" @size="lg" />
                    </DD.Trigger>
                    <DD.Content class="dropdown-menu">
                        <h6 class="dropdown-header">
                            <FaIcon @icon="bookmark" class="mr-1" />
                            My saved searches
                        </h6>
                        <DropdownAction @dd={{DD}}>
                            disjunction feminine
                            <small class="text-muted">(all, 132 matches)</small>
                        </DropdownAction>
                        <DropdownAction @dd={{DD}}>
                            family discord
                            <small class="text-muted">(books, 3 matches)</small>
                        </DropdownAction>
                        <DropdownAction @dd={{DD}}>
                            depression anxiety
                            <small class="text-muted">(videos, 5 matches)</small>
                        </DropdownAction>
                        <div class="dropdown-divider"></div>
                        <DropdownAction @dd={{DD}} disabled={{not this.hasEnteredSearch}}>
                            <FaIcon @icon="plus-circle" @fixedWidth={{true}} class="text-muted" />
                            Save this search
                        </DropdownAction>
                    </DD.Content>
                </DropdownMenu>
            </div>
        </div>
        <form>
            <div class="form-group">
                <FlInput
                    @placeholder="What are you looking for?"
                    @value={{@smartSearchTerm}}
                    maxlength="255"
                    autocomplete="off"
                />
            </div>
            <p class="text-muted mb-2">Find terms or phrases</p>
            <AnimatedContainer>
                {{#animated-each @searchTerms use=this.animateTransition duration=300 as |searchTerm|}}
                    <div class="d-flex mb-2">
                        {{!-- TODO extract term control into <Search::Form::TermControl /> --}}
                        <div class="search-form-term-control flex-fill">
                            <FlInput
                                @placeholder="Terms or phrase"
                                @value={{searchTerm.term}}
                                class="search-form-term-control-text"
                                maxlength="255"
                                autocomplete="off"
                            />
                            <select class="custom-select search-form-term-control-type" {{on "change" (fn this.updateTermType searchTerm)}}>
                                {{#each this.searchTypes as |searchType|}}
                                    <option value={{searchType.id}} selected={{eq searchType.id searchTerm.type}}>
                                        {{searchType.label}}
                                    </option>
                                {{/each}}
                            </select>
                        </div>
                        <Button
                            @icon="trash-alt"
                            @type="link"
                            @action={{fn @removeSearchTerm searchTerm}}
                            class="ml-1 p-0"
                            title="Remove term"
                        />
                    </div>
                {{/animated-each}}
            </AnimatedContainer>
            <div class="d-flex justify-content-between mb-3">
                <Button
                    @label="Add term"
                    @icon="plus"
                    @type="link"
                    @action={{this.addSearchTerm}}
                    class="p-0"
                />
                <CheckboxInput
                    @checked={{@matchSynonyms}}
                    @onChange={{@matchSynonymsChange}}
                    @label="Match Synonyms"
                />
            </div>
            <div class="d-flex justify-content-end">
                <Button
                    @type="link"
                    @label="Clear"
                    @action={{@resetForm}}
                    class="mr-1"
                />
                <ButtonSpinner
                    @type="primary"
                    @blockLayout={{false}}
                    @wide={{true}}
                    @showSuccess={{false}}
                    @label="Search"
                    @action={{@submit}}
                    disabled={{not this.hasEnteredSearch}}
                />
            </div>
        </form>
    </div>
    <AnimatedContainer>
        {{!-- TODO create <Alert> component to contain show/hide animation, borderless layout, etc --}}
        {{#animated-if this.hasTooManyResults use=this.animateTransition duration=300 initialInsertion=true}}
            <div class="alert alert-warning mb-0 rounded-0 border-left-0 border-right-0 small">
                <p class="mb-1">
                    <FaIcon @icon="info-circle" />
                    <strong>Try refining your search</strong>
                </p>
                <p class="mb-1">
                    There are <strong>{{format-number @resultsCount}}</strong> results that match your criteria.
                </p>
                <p class="mb-0">
                    Enter at least two terms, additional criteria, and/or use the 'Refine' form below to increase search precision.
                </p>
            </div>
        {{/animated-if}}
    </AnimatedContainer>
</div>

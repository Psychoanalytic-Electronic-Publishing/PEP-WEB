<div class="bg-white border-divider-b p-3 mb-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">
            Search for Documents
        </h5>
        <Button @type="link" title="Saved searches">
            <FaIcon @icon="bookmark" @size="lg" />
        </Button>
    </div>
    <form>
        <div class="form-group">
            <FlInput
                @placeholder="What are you looking for?"
                @value={{@smartSearchTerm}}
            />
        </div>
        <p class="text-muted mb-1">Find terms or phrases</p>
        <div class="form-row">
            <div class="col mb-2">
                <FlInput
                    @placeholder="Type"
                    @value={{this.type1}}
                />
            </div>
            <div class="col mb-2">
                <FlInput
                    @placeholder="Terms"
                    @value={{this.term1}}
                />
            </div>
        </div>
        <div class="form-row">
            <div class="col mb-2">
                <FlInput
                    @placeholder="Type"
                    @value={{this.type2}}
                />
            </div>
            <div class="col mb-2">
                <FlInput
                    @placeholder="Terms"
                    @value={{this.term2}}
                />
            </div>
        </div>
        <div class="d-flex justify-content-end mb-2">
            <CheckboxInput
                @checked={{@matchSynonyms}}
                @onChange={{@matchSynonymsChange}}
                @label="Match Synonyms"
            />
        </div>
        <div class="d-flex justify-content-end">
            <Button
                @type="link"
                @label="Clear"
                @action={{@clear}}
                class="mr-1"
            />
            <ButtonSpinner
                @type="primary"
                @blockLayout={{false}}
                @wide={{true}}
                @label="Search"
                @action={{@submit}}
            />
        </div>
    </form>
</div>

<Table
    @containerSelector={{@containerSelector}}
    @columns={{this.columns}}
    @rows={{@rows}}
    @hasMoreRows={{@hasMoreRows}}
    @loadMoreRows={{@loadMoreRows}}
    @isLoading={{@isLoading}}
    @updateSorts={{@updateSorts}}
    @enableSort={{true}}
    @fillMode="nth-column"
    @fillColumnIndex={{4}}
    @sorts={{@sorts}}
    @rowComponent="tables/row/expandable-selected-row"
    @headerStickyOffset={{this.headerStickyOffset}}
    @tableMeta={{hash
        document=@document
        expandedRowComponent="tables/row/search"
        expandedRows=(if @showHitsInContext this.expandedRows this.defaultExpandedRows)
    }}
    @renderAllRows={{this.fastboot.isFastBoot}}
/>
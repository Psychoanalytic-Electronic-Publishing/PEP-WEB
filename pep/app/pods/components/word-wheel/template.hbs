<FlTypeahead
    {{!-- TODO set a hard width (~75% of input width) for typahead menu --}}
    @menuClassName="word-wheel-typeahead"
    @value={{@value}}
    @placeholder={{@placeholder}}
    @suggestions={{this.suggestions}}
    @loadSuggestions={{this.loadSuggestions}}
    {{!-- TODO need to make sure things like this.onSmartSearchTextChange still fire here on suggestion selections! --}}
    @onSelectSuggestion={{@onChange}}
    @onChange={{@onChange}}
    ...attributes
/>

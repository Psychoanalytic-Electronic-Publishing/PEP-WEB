{{page-title (t "search.title")}}
<div
    class="page-content page-content-sectioned"
    {{did-insert this.updateContainerMaxHeight}}
    {{did-resize this.updateContainerMaxHeight debounce=250}}
>
    <div class="page-content-section flex-fill">
        <Scrollable @namespace="search-results" class="page-content-inner">
            {{#if (and (not this.paginator.models) this.paginator.isLoadingModels)}}
                <div class="py-3 px-4">
                    <Loading::Search::Results />
                </div>
            {{else}}
                {{#if this.noResults}}
                    <div class="d-flex justify-content-center align-items-center">
                        {{#if this.hasSubmittedSearch}}
                            <div class="m-3 m-md-5 text-muted">
                                <p class="my-4 p-3 bg-backdrop-well rounded">
                                    {{t "search.results.none"}}
                                </p>
                                <p class="d-lg-none mb-4">
                                    <Button
                                        @type="primary"
                                        @size="lg"
                                        @blockLayout={{this.fastbootMedia.isMobile}}
                                        @icon="search"
                                        @label={{t "search.new"}}
                                        @action={{this.showSearch}}
                                    />
                                </p>
                            </div>
                        {{else}}
                            <div class="m-3 m-md-5 p-3 bg-backdrop-well rounded text-muted">
                                <h5>{{t "search.empty.heading"}}</h5>
                                <p class="mb-4">
                                    <FaIcon @icon="arrow-left" />
                                    {{t "search.empty.instructions"}}
                                </p>
                                <p class="d-lg-none mb-4">
                                    <Button
                                        @type="primary"
                                        @size="lg"
                                        @blockLayout={{this.fastbootMedia.isMobile}}
                                        @icon="search"
                                        @label={{t "search.new"}}
                                        @action={{this.showSearch}}
                                    />
                                </p>
                                <h5>{{t "search.empty.tips.heading"}}</h5>
                                <p>
                                    {{t "search.empty.tips.instructions"}}
                                </p>
                                <ul>
                                    <li>{{t "search.empty.tips.tip1" htmlSafe=true}}</li>
                                    <li>{{t "search.empty.tips.tip2" htmlSafe=true}}</li>
                                    <li>{{t "search.empty.tips.tip3" htmlSafe=true}}</li>
                                    <li>{{t "search.empty.tips.tip4" htmlSafe=true}}</li>
                                    <li>{{t "search.empty.tips.tip5" htmlSafe=true}}</li>
                                    <li>{{t "search.empty.tips.tip6" htmlSafe=true}}</li>
                                </ul>
                            </div>
                        {{/if}}
                    </div>
                {{else}}
                    <div class="py-3 px-4">
                        <div class="d-md-flex justify-content-between align-items-center mb-3">
                            <h4 class="mb-0">
                                {{t
                                    "common.numResults"
                                    count=(format-number (or this.paginator.metadata.fullCount 0))
                                    htmlSafe=true
                                }}
                            </h4>
                            <div class="d-flex align-items-center">
                                <div class="d-flex align-items-center">
                                    <span class="text-muted">{{t "search.view.label"}}</span>
                                    <select
                                        class="custom-select custom-select-sm text-truncate ml-1 mr-2"
                                        {{on "change" this.updateSelectedView}}
                                    >
                                        {{#each this.searchViews as |view|}}
                                            <option value={{view.id}} selected={{eq view.id this.selectedView.id}}>
                                                {{view.label}}
                                            </option>
                                        {{/each}}
                                    </select>
                                </div>
                                <Button
                                    @type="link"
                                    class="text-decoration-none p-1 mr-1"
                                >
                                    <span class="text-muted">{{t "search.sort.label"}}</span>
                                    <span class="text-dark mr-1">{{t "search.sort.year"}}</span>
                                    <FaIcon @icon="angle-down" class="text-muted" />
                                </Button>
                                <div class="d-flex align-items-center">
                                    <span class="text-muted">{{t "search.view.label"}}</span>
                                    <select
                                        class="custom-select custom-select-sm text-truncate ml-1 mr-2"
                                        {{on "change" this.updateSelectedView}}
                                    >
                                        {{#each this.searchViews as |view|}}
                                            <option value={{view.id}} selected={{eq view.id this.selectedView.id}}>
                                                {{view.label}}
                                            </option>
                                        {{/each}}
                                    </select>
                                </div>

                                {{!-- <FlSelect
                                    class="p-1 mr-2 d-flex"
                                    @options={{this.searchViews}}
                                    @value={{this.selectedView}}
                                    @valuePath="id"
                                    @labelPath="label"
                                    @emptyOptionText={{t "search.view.label"}}
                                    @allowClear={{false}}
                                    @onChange={{this.updateSelectedView}}
                                /> --}}
                                <Button::WithTooltip
                                    @type="link"
                                    @icon="download"
                                    @iconSize="lg"
                                    @tooltip={{t "common.export"}}
                                    class="p-1"
                                />
                                <Button::WithTooltip
                                    @type="link"
                                    @icon="print"
                                    @iconSize="lg"
                                    @tooltip={{t "common.print"}}
                                    class="p-1"
                                />
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                {{#if (eq this.selectedView.id this.tableView)}}
                                    <Tables::Search
                                        @rows={{this.paginator.models}}
                                        @hasMoreRows={{this.paginator.hasMore}}
                                        @loadMoreRows={{this.paginator.loadMoreModels}}
                                        @isLoading={{this.paginator.isLoadingModels}}
                                        @updateSorts={{this.paginator.changeSorting}}
                                        @sorts={{this.paginator.sorts}}
                                    />

                                {{else}}
                                    <VerticalCollection
                                        @items={{this.paginator.models}}
                                        @tagName="ul"
                                        @containerSelector=".page-content-inner"
                                        @class="list-unstyled"
                                        @estimateHeight={{100}}
                                        @renderAll={{this.fastboot.isFastBoot}}
                                        @lastReached={{this.paginator.loadMoreModels}}
                                        as |result|
                                    >
                                        <Search::Item::Bibliographic
                                            @item={{result}}
                                            @selectedItems={{this.selectedItems}}
                                            @onCheck={{this.onCheck}}
                                            @openResult={{this.openResult}}
                                        />
                                    </VerticalCollection>
                                    {{#if this.paginator.isLoadingModels}}
                                        <Loading::Spinner @options={{hash text=(t "common.loadingResults")}} />
                                    {{/if}}
                                {{/if}}
                            </div>
                        </div>
                    </div>
                {{/if}}
            {{/if}}
        </Scrollable>
    </div>
    <Search::Preview
        @result={{this.previewedResult}}
        @queryParams={{this.readQueryParms}}
        @mode={{this.previewMode}}
        @setMode={{this.setPreviewMode}}
        @close={{this.closeResultPreview}}
        @maxHeight={{this.containerMaxHeight}}
        class="page-content-section"
    />
</div>
